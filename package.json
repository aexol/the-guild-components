{
  "name": "the-guild-components-monorepo",
  "private": true,
  "scripts": {
    "start": "start-storybook -p 6008",
    "build": "tsc && rollup -c",
    "storybook": "build-storybook -o dist-storybook",
    "next:dev": "concurrently -r \"tsc --watch\" \"rollup -c --watch\" \"yarn --cwd examples/nextjs dev\"",
    "next:build": "cd examples/nextjs && yarn build && yarn start",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "lint-check": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "type-check": "tsc",
    "type-check:watch": "npm run type-check -- --watch",
    "prepare": "husky install",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "zip": "yarn build && yarn --cwd packages/components pack"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@changesets/cli": "2.16.0",
    "@emotion/babel-plugin-jsx-pragmatic": "0.1.5",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-image": "2.0.6",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@storybook/addon-actions": "6.2.9",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addon-links": "6.2.9",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.2.9",
    "@types/react": "17.0.11",
    "@types/react-instantsearch-core": "6.10.2",
    "@types/react-instantsearch-dom": "6.10.0",
    "@types/react-paginate": "7.1.0",
    "@types/validator": "13.1.4",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "eslint": "7.29.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "postcss": "8.3.5",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.52.2",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-copy": "3.4.0",
    "typescript": "4.3.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  },
  "browserslist": "> 0.25%, not dead",
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "pretty-quick --staged",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=12"
  }
}